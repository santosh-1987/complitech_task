<%= render 'layouts/message_display' %>
<h2>Welcome to Admin Dashboard</h2>
<!-- Code For Invite -->
<%= form_for :invitation,:url=>{:controller=>'invitations',:action =>'create'} do |f| %>
    <div class="form-group">
      <%= f.label :email, "Enter email addresses to invite Users:",:class=>"form-control" %>
    </div>
    <div class="form-group">
      <%= f.text_area :email,:class=>"form-control field span12", :rows=>"4",:id => "email_text",:placeholder => "Enter email address separated by (,) ..." %>
    </div>
    <div class="form-group">
      <%= f.submit 'Invite',:class=>"btn btn-primary" %>
    </div>
<% end %>
